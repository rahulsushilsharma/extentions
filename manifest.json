{
  "manifest_version": 2,
  "name": "Custom Code Runner",
  "version": "1.1",
  "description": "Run custom code on web pages",
  "permissions": ["activeTab", "storage" ,"http://localhost/*"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
